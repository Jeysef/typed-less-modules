{
  "name": "typed-less-modules-renewed",
  "version": "0.2.2",
  "description": "TypeScript type definition generator for LESS CSS Modules",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jeysef/typed-less-modules"
  },
  "homepage": "https://github.com/Jeysef/typed-less-modules#readme",
  "keywords": [
    "less",
    "less modules",
    "cli",
    "typescript",
    "type generator",
    "less modules"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "typed-less-modules": "ts-node ./lib/cli.ts",
    "clean": "rmdir /Q /S dist",
    "build": "tsc",
    "prepare": "npm run build && husky install",
    "check-types": "tsc --noEmit",
    "check-formatting": "prettier --check **/*.{js,json,css,md,less,tsx,ts}",
    "check-linting": "eslint .",
    "commit": "commit",
    "semantic-release": "semantic-release"
  },
  "files": [
    "dist/lib"
  ],
  "bin": {
    "typed-less-modules": "./dist/lib/cli.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/prompt-cli": "^18.4.3",
    "@commitlint/travis-cli": "^18.4.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.5.10",
    "@types/less": "^3.0.6",
    "@types/node": "^20.10.0",
    "@types/prettier": "^2.7.3",
    "@types/reserved-words": "^0.1.4",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "eslint": "^8.54.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^7.0.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "bundle-require": "^4.0.2",
    "chalk": "4.1.2",
    "change-case": "^4.1.2",
    "chokidar": "^3.5.3",
    "esbuild": "^0.19.8",
    "glob": "^10.3.10",
    "joycon": "^3.1.1",
    "less": "^3.13.1",
    "postcss": "^8.4.31",
    "postcss-modules": "^6.0.0",
    "reserved-words": "^0.1.2",
    "slash": "^3.0.0",
    "yargs": "^17.7.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,less,tsx,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
